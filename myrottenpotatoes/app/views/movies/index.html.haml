-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th{id: 'title_header', class: @title_style}= link_to "Movie Title", movies_by_title_path
      %th Rating
      %th{id: 'release_date_header', class: @release_style}= link_to "Release Date", movies_by_release_path
      %th More Info
      %th Edit
      %th Delete
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie) 
        %td= link_to 'Edit', edit_movie_path(movie)
        %td= link_to 'Delete', movie_path(movie), method: :delete

-# add to end of index.html.haml
= link_to 'Add new movie', new_movie_path

%h1 Search TMDb for a movie

= form_tag action: 'search_tmdb' do

  %label{for: 'search_terms'} Search Terms
  = text_field_tag 'search_terms'
  = submit_tag 'Search TMDb'
